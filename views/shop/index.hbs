<div class="container" style="margin-bottom:10px">
    <div class="alert alert-info" role="alert">
        <h2 class="buygames">
            <i class="fas fa-gamepad"></i>
            <i class="fab fa-phoenix-framework"></i>
            <i class="fas fa-wifi"></i>
            <i class="fas fa-dice-d20"></i>
            <i class="fab fa-fantasy-flight-games"></i>
            Buy Cool GAMES
            <i class="fab fa-d-and-d"></i>
            <i class="fas fa-headset"></i>
            <i class="fas fa-futbol"></i>
            <i class="fas fa-snowboarding"></i>
            <i class="fas fa-ghost"></i>
        </h2>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}} hidden{{/if}}> {{ successMsg }} </div> </div>
            </div> {{# each products }} <div class="row">
            {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imgPath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <p class="description">{{ this.description }}</p>
                        <div class="clearfix">
                            <div class="price pull-left"><i class="fas fa-rupee-sign"></i> {{ this.price }}</div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-primary pull-right" role="button">
                                <strong>
                                    Add to Shopping Cart
                                </strong>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/each}}

        {{> swiper}}